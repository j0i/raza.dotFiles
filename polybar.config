;; requires nerd-fonts-iosevka

;;=================== 
;; COLORS
;;=================== 

[colors]
pseudo-transparency = true
;for transparency first two values are opacity

;;=================== 
;; BAR
;;=================== 
[bar/main]

monitor = 
monitor-fallback = 
monitor-strict = false 
override-redirect = false 

bottom = false 
fixed-center = true 

width = 100%
height = 22
offset-x = 0%
offset-y = 0%

;hopefully background is trans
background = #00000000
foreground = #ffffff

;border-size=0
;border-bottom-size=0
;border-color=#00000000

font-0 = "Iosevka Nerd Font:style=Medium:size=13;1"

modules-left = title left1
modules-center = workspaces
modules-right = right1 alsa battery network date

;;=================== 
;; MODULES
;;=================== 

[module/left1]
type = custom/text
content-background = #00000000
content-foreground = #1793d1
content = "%{T3}%{T-}"

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/right1]
type = custom/text
content-background = #00000000
content-foreground = #EA67fe
content = "%{T3}%{T-}"
;content = "%{T3}%{T-}"

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_


[module/title]
type = internal/xwindow

format = <label>
format-background = #00000000
format-foreground = #FFFFFF
format-padding = 1

label = %title%
label-maxlen = 35

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/workspaces]
type = internal/xworkspaces

pin-workspaces = true
enable-click = true
enable-scroll = true

label-active = 異
label-empty = 
;label-urgent = 卑
;label-occupied = 卑

format = <label-state>

label-monitor = %name%
label-active-foreground = #EA67FE
label-occupied-foreground = #FF0087
label-urgent-foreground = #FF0087 
label-empty-foreground = #FFFFFF

label-active-padding = 1
label-urgent-padding = 1
label-occupied-padding = 1
label-empty-padding = 1

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/alsa]
type = internal/alsa

format-volume = <ramp-volume> <label-volume>
format-volume-background = #00000000

format-volume-foreground = #EA67FE
format-volume-padding = 1

label-volume = %percentage%%

format-muted-prefix = ﱝ
label-muted = " "
format-muted-background = #00000000
format-muted-foreground = #EA67FE
format-muted-padding = 1

ramp-volume-0 = 奄
ramp-volume-1 = 奔
ramp-volume-2 = 奔
ramp-volume-3 = 墳
ramp-volume-4 = 

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_
[module/battery]
type = internal/battery

full-at = 99

battery = BAT0
adapter = ACAD

poll-interval = 2
time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-charging-background = #00000000
format-charging-foreground = #EA67FE
format-charging-padding = 1

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-background = #00000000
format-discharging-foreground = #EA67FE
format-discharging-padding = 1

label-charging = %percentage%%
label-discharging = %percentage%%

label-full = Fully Charged
label-full-background = #00000000
label-full-foreground = #EA67FE
label-full-padding = 1

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-5 = 
ramp-capacity-6 = 
ramp-capacity-7 = 
ramp-capacity-8 = 
ramp-capacity-9 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-5 = 
animation-charging-6 = 
animation-charging-7 = 
animation-charging-8 = 
animation-charging-framerate = 100

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/network]
type = internal/network
interface = wlp3s0

interval = 1.0
accumulate-stats = true
unknown-as-up = true

format-connected = <ramp-signal> <label-connected>
;format-connected-background = #4D8E24AA << this was the trans color format
format-connected-background = #00000000
format-connected-foreground = #EA67FE


format-connected-padding = 1

format-disconnected = <label-disconnected>
format-disconnected-background = #00000000
format-disconnected-foreground = #EA67FE
format-disconnected-padding = 1

label-connected = "%essid%"
label-disconnected = 睊 "Not Connected"
ramp-signal-0 = 直
ramp-signal-1 = 直
ramp-signal-2 = 直
ramp-signal-3 = 直
ramp-signal-4 = 直

;; _-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_-_

[module/date]
type = internal/date
interval = 1.0

time =  %I:%M %p
time-alt =  %d/%m/%Y%

format = <label>
format-background = #00000000
format-foreground = #EA67FE
format-padding = 1
label = %time%
